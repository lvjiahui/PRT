#version 430 core

layout (local_size_x = 32, local_size_y = 2) in;

layout (rgba16f, binding = 0) uniform image2D output_image;

void main()
{
    vec4 color = vec4(vec2(gl_LocalInvocationID.xy) / vec2(gl_WorkGroupSize.xy), 0.0, 0.0);
    imageStore(output_image, ivec2(gl_GlobalInvocationID.xy), color);
}